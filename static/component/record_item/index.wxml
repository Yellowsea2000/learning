<view wx:for="{{listData}}" wx:key="{{item.id}}" class='item'>
  <view class='top'>
    <view class='top-left'>
      <image class='img' mode='aspectFill' src='{{item.headPic?item.headPic:"/images/ic_mine_select.png"}}'></image>
      <view class='center'>
        <view class='name'>{{item.userName}} <text wx:if="{{chekeIndex==3}}" class='tag {{item.status == "P4"?" ":"red"}}'> {{item.status == "P4"&&chekeIndex==3?"初试":"复试"}}</text> </view>
        <view class=''>{{item.companyName}}</view>
        <view class=''>{{item.jobName}}</view>
      </view>
    </view>
    <view class='top-right'>
      <view class='tel-box' data-tel='{{item.phone}}' bindtap='_totel'>
        <image src='/images/tel.png'></image>
        <view>联系</view>
      </view>
      <view>{{item.createTimeShow}}</view>
    </view>
  </view>
  <view class='btn-box' wx:if="{{chekeIndex==1}}">
    <button data-type="{{1}}" data-item='{{item}}' bindtap='_btnTap'>初面通过</button>
    <button data-type="{{2}}" data-item='{{item}}' bindtap='_btnTap'>未通过</button>
  </view>
  <view class='btn-box' wx:if="{{chekeIndex==2}}">
    <button data-type="{{3}}" data-item='{{item}}' bindtap='_btnTap'>复试通过</button>
    <button data-type="{{4}}" data-item='{{item}}' bindtap='_btnTap'>复试不通过</button>
  </view>
  <view class='btn-box' wx:if="{{chekeIndex==4}}">
    <button data-type="{{5}}" data-item='{{item}}' bindtap='_btnTap'>入职通过</button>
    <button data-type="{{6}}" data-item='{{item}}' bindtap='_btnTap'>入职不通过</button>
  </view>

  <view class='btn-box' wx:if="{{chekeIndex==7}}">
    <button wx:if="{{item.status=='pending'}}" data-type="{{'pending'}}" data-item='{{item}}' bindtap='_btnTap'>待审核</button>
    <button wx:if="{{item.status=='pass'}}" data-type="{{'pass'}}" data-item='{{item}}'>通过</button>
    <button wx:if="{{item.status=='fail'}}" data-type="{{'fail'}}" data-item='{{item}}'>不通过</button>
  </view>

  <view class='btn-box' wx:if="{{chekeIndex==8}}">
    <button wx:if="{{item.status=='pass'}}" data-type="{{'pass'}}" data-item='{{item}}'>通过</button>
  </view>

  <view class='btn-box' wx:if="{{chekeIndex==9}}">
    <button wx:if="{{item.status=='fail'}}" data-type="{{'fail'}}" data-item='{{item}}'>不通过</button>
  </view>
</view>