<view class="modal-layer">
    <view class="modal-box">
      <view class="input-item">
        <view class="input-item-name">手机号码</view>
        <view class="input-item-val" style="width:250rpx;">
          <input type="number" bindinput="inputChange" value="{{phone}}" maxlength="11" data-type="phone" placeholder="请输入" />
        </view>
      </view>
      <view class="input-item">
        <view class="input-item-name">验证码</view>
        <view class="input-item-val">
          <input type="number"  value="{{code}}" data-type="code" bindinput="inputChange" maxlength="6"  placeholder="请输入"/>
        </view>
        <view class="btn-wrapper" bindtap="getCode">
          <button disabled="{{count}}">{{count?count:"获取验证码"}}</button>
        </view>
        
      </view>
      <view class="identify-code">
      </view>
      <view class="bottom">
          <button bindtap = "submit">确认</button>
          <button bindtap = "cancel">取消</button>
      </view>
    </view>
</view>