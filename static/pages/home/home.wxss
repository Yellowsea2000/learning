.slide-image {
  height: 100%;
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 26rpx;
margin-bottom: 20rpx;
}

.header .header-item {
  display: flex;
  width: 60%;
}

.header .header-item.sx {
  justify-content: flex-end;
}

.header .header-item .img1 {
  height: 28rpx;
  width: 20rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
}
.header .header-item .arrow{
  height: 20rpx;
  width: 28rpx;
  margin-top: 25rpx;
  margin-left: 10rpx;
}

.header .header-item .img2 {
  height: 24rpx;
  width: 26rpx;
  margin-top: 22rpx;
  margin-right: 10rpx;
}
.header .search{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color:#999;
  width: 300rpx;
  margin:10rpx 0; 
  border-radius: 50rpx;
  background: #eee;
}
.header .search image{
  width: 30rpx;
  height: 30rpx;
}


/* 列表样式 */
.elips{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 45%;
}

.hover-item{
  background-color: #efeff4 !important
}
.item-li {
  background-color: #fff;
  padding: 0 56rpx;
  font-size: 28rpx;
  color: #999;
  margin-top: 10rpx;
}

.item-li .top {
  display: flex;
  line-height: 80rpx;
  justify-content: space-between;
}
.item-li .top .price{
  font-size: 36rpx;
  color: #FF7E00;
  margin-left: 20rpx;
}
.item-li .top .right {
  display: flex;
  max-width: 50%;
  min-width: 50%;
  justify-content: flex-end;
}

.item-li .top .left {
  max-width: 50%;
  min-width: 50%;
  font-size: 32rpx;
  color: #333;
  display: flex;
  vertical-align: left;
  align-items: center;
}
.item-li .top .left-text{
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-li .top .left image{
  width: 120rpx;
  height: 40rpx;
}
.item-li .center {
  display: flex;
  justify-content: space-between;
}

.item-li .bottom {
  display: flex;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.item-li .bottom image {
  height: 28rpx;
  width: 20rpx;
  margin-top: 6rpx;
  margin-right: 18rpx;
}
