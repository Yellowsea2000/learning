/* pages/mine/info/info.wxss */

.item {
  display: flex;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  background-color: white;
}

.camera {
  width: 50rpx;
  height: 50rpx;
  padding: 24rpx;
}

.item:after {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 2rpx;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #ddd;
}

.item .title {
  min-width: 140rpx;
  max-width: 140rpx;
}

.item .phone-edit-btn{
  position:absolute;
  right:40rpx;
  background:red;
  color:white;
  height:60rpx;
  line-height: 60rpx;
  margin-top:20rpx;
  font-size: 30rpx;
  
}
.item .input {
  height: 100%;
  width: 70%;
  margin: 0;
  border: none;
  background-color: white;
  font-size: 28rpx;
  text-align: left;
  line-height: 100rpx;
  padding: 0;
  color: #999;
}

button::after {
  border: none;
}

.box-sex {
  display: flex;
}

.box-sex .box-sex-item {
  display: flex;
  margin-right: 50rpx;
}

.box-sex image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
}

/* 图片展示 */

.box-img {
  display: flex;
  flex-wrap:wrap;
}

.box-img .box-img-item {
  position: relative;
  width: 20vw;
  height: 20vw;
  margin-left: 4vw;
  margin-top: 4vw
}

.box-img .box-img-item .img {
  width: 100%;
  height: 100%;
}

.box-img .box-img-item icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
.bj{
  width: 100%;
  text-align: right;
  padding-right: 4vw;
  margin-top: 16rpx
}

/* 用户协议 */

.box-protocol {
  display: flex;
  padding: 36rpx 36rpx;
  font-size: 28rpx;
  justify-content: center
}
.box-protocol .f-blue{
   color: #F60554
}
.box-protocol .check-box {
  margin-top: -6rpx;
}

.box-protocol .check-box checkbox {
  zoom: 70%;
}

button{
  background:red;
  color:white;
}
