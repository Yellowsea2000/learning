
<view style='margin-top: 20rpx;'></view>
<view class="item">
  <view class='title'>真实姓名</view>
  <input class='input input2' placeholder="请输入真实姓名" bindinput="getUserName" />
</view>
<view class="item">
  <view class='title'>手机号码</view>
  <button class='input' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
    {{tel?tel:"点击获取"}}
  </button> 
  <button class="phone-edit-btn" bindtap="showModal" >输入号码</button>
</view>
<view class="item">
  <view class='title'>性别</view>
  <view class='box-sex'>
    <view class='box-sex-item' data-item='1' bindtap='chooseSex'>
      <image src='{{sex==1?"/images/ic_box_select.png":"/images/ic_box.png"}}'></image>
      <view>男</view>
    </view>
    <view class='box-sex-item' data-item='2' bindtap='chooseSex'>
      <image src='{{sex==2?"/images/ic_box_select.png":"/images/ic_box.png"}}'></image>
      <view>女</view>
    </view>
  </view>
</view>
<view class="item">
  <view class='title'>出生年月</view>
  <picker class='input' mode="date" start="1900-01-01" end="{{nowDate}}" bindchange="bindTimeChange">
    <view class="picker">
      {{birthDay}}
    </view>
  </picker>
</view>

<protocol id="protocol"></protocol>
<view class='box-protocol f12'>
  <view class='check-box'>
    <checkbox-group bindchange="checkboxChange">
      <checkbox value="op" checked="{{isChecked}}" />
    </checkbox-group>
  </view>
  <text>同意</text>
  <view class='f-blue' bindtap='toProtocol'>《简历科技用户服务协议》</view>
  <button style="bottom:30rpx" class="btn-bottom-single" hover-class='hover' bindtap="submit">{{btnShow}}</button>
</view>

<identification-code
      wx:if="{{isShowModal}}"
      bind:closeCode="cancel"
      bind:editPhone = "editPhone">
 </identification-code>