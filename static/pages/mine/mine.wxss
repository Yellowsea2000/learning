.top-box {
  position: relative;
  color: #fff
}

.top-box .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 0;
  background: linear-gradient(to top right, #B736C0 0%, #D3316E 15%, #D12C40 50%, #CF2B3F 100%);
}

.top-box .top {
  position: relative;
  display: flex;
  z-index: 1;
  padding: 54rpx 48rpx;
}

.top-box .top .img-head {
  height: 120rpx;
  width: 120rpx;
  border: 20rpx solid #f3686f;
  border-radius: 120rpx;
}

.top-box .top .right {
  margin-left: 44rpx;
  line-height: 58rpx;
}

.value-class {
  color: #ff7e00;
}
.cg{
  display: flex;
  justify-content: space-between;
  background-color: white;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 15px;
}
