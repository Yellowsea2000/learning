/* pages/mine/join_hand/join_hand.wxss */
page{
  background-color: #fff;
  height: 100%;
 
}
.loading{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
}

.wrap,.idcard-box,.idcard-upload{
  width: 100%;
}
.wrap,.idcard-box,.idcard-item,.idcard-upload{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.wrap{
 overflow-x: hidden;
}
.idcard-item{
  width: 82.67%;
  height: 360rpx;
  font-size: 34rpx;
  color: #F60554;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.idcard-item  .idcard-upload{
  position: relative;
  height: 100%;
}

.idcard-item .idcard-upload-text{
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
}
.idcard-item .camera{
  width: 64rpx;
  vertical-align: middle;
}
.idcard-img,.idcard-img image{
  width: 100%;
  max-height: 360rpx;
}
.idcard-bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -99;
}
.form-box{
  width: 100%;
}
.btn-box{
  width: 88%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.bottom-btn {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background: rgba(246, 5, 84, 1);
  color: white;
  text-align: center;
}

