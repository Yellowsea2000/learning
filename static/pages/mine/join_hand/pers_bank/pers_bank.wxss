/* pages/mine/join_hand/pers_bank/pers_bank.wxss */
page{
  background-color: #fff;
  position: relative;
  height: 100%;
}
.loading{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
}
.wrap,.camera-box,.camera-upload{
  width: 100%;
}
.wrap{
  overflow-x: hidden;
}
.wrap,.camera-box,.camera-item,.camera-upload{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
}
.camera-item{
  width: 82.67%;
  height: 360rpx;
  font-size: 34rpx;
  color: #F60554;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.camera-item  .camera-upload{
  position: relative;
}

.camera-item .camera-upload-text{
  height: 56rpx;
  min-width: 320rpx;
  line-height: 56rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -28rpx;
  margin-left: -160rpx;
  
}
.camera-item .camera{
  width: 64rpx;
  vertical-align: middle;
}
.camera-img,.camera-img image{
  width: 100%;
  max-height: 360rpx;
}
.camera-bg{
  width: 100%;
  z-index: -99;
}
.form-box{
  width: 100%;
}
.btn-box{
  width: 88%;
  position: absolute;
  bottom:40rpx; 
  margin-top: 20rpx;
}
.bottom-btn {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background: rgba(246, 5, 84, 1);
  color: white;
  text-align: center;
}