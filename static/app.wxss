/** 页面底部单button样式*/

.btn-bottom-single {
  position: absolute;
  width: 70%;
  left: 15%;
  border: none;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border-radius: 70rpx;
  color: #fff;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.3);
  background:#EA2742;
}
.btn-bottom-single.hover{
  background: rgb(241, 101, 120)
}
